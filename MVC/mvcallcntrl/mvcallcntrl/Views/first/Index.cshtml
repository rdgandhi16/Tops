@model mvcallcntrl.Models.first

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
          <div align="center"> @Html.ActionLink("Show","getdata")</div>
    @using (@Html.BeginForm("Index", "first", FormMethod.Post, new {enctype="multipart/form-data" }))
    {
    <div>
        <table border="1" cellspacing="10" cellpadding="10" align="center">
            <tr>
                <td>Firstname:
                </td>
                <td>
                    @Html.TextBoxFor(v => v.fname)
                </td>
            </tr>
            <tr>
                <td>Password:
                </td>
                <td>
                    @Html.PasswordFor(v => v.password)
                </td>
            </tr>
            <tr>
                <td>Gender:
                </td>
                <td>
                    @Html.RadioButtonFor(v => v.gender, "Male") Male
                    @Html.RadioButtonFor(v => v.gender, "Female") Female
                </td>
            </tr>
            <tr>
                <td>Hobby:
                </td>
                <td>
                    @Html.CheckBoxFor(v => v.cric, "Cric") Cricket
                    @Html.CheckBoxFor(v => v.foot, "Foot") Football
                    @Html.CheckBoxFor(v => v.Hockey, "Hockey") Hockey
                </td>
            </tr>
            <tr>
                <td>State</td>
                <td>
                    @*   @Html.DropDownListFor(v=>v.state,ViewBag.state as SelectList)
                *@
                    @Html.DropDownListFor(v => v.state, ViewBag.state as SelectList)
                </td>
            </tr>
            <tr>
                <td>Image:
                </td>
                <td>
                    <input type="file" name="file1" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" name="sub" value="Save" />
                </td>
            </tr>
        </table>
    </div>
    }
</body>
</html>

